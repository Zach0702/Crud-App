@model Dapper101.Models.CustomersViewModel

@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<div>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Company Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Region</th>
                <th>Postal Code</th>
                <th>Country</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
            <tr>
                <td>@customer.ID</td>
                <td>@customer.CompanyName</td>
                <td>@customer.Address</td>
                <td>@customer.City</td>
                <td>@customer.Region</td>
                <td>@customer.PostalCode</td>
                <td>@customer.Country</td>
                <td>@customer.Phone</td>
            </tr>
            }
            </tbody>
        </table>
</div>
<div>
